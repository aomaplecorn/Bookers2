<h1>Books#index</h1>

<h2>User info</h2>

<tr>
  <%= image_tag current_user.get_profile_image(100,100) %>
  <th>name</th>
  <th><%= current_user.name %></th>
</tr>
<tr>
  <th>introduction</th>
  <th><%= current_user.introduction %></th>
</tr>

<!--<a% if current_user %>-->
  <%= link_to "User編集", users_path %>
<!--<a% end %>-->



<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <label>Title</label>
    <%= f.text_field :title %>
  <label>Opinion</label>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
<% end %>


<h1>以下、右画面（Book一覧）</h1>
<thead>
  <th>Title</th>
  <th>Opinion</th>
  <th colspan=3></th>
</thead>

<tbody>
<% @books.each do |book| %>
<tr>
  <td><%= image_tag book.user.get_profile_image(80,80) %></td>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
</tr>
<% end %>

</tbody>
