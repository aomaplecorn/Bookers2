<h1>Books#edit</h1>

<h1>Editing Book</h1>


<%= form_with model: @book, method: :patch do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>
  <label>Opinion</label>
  <%= f.text_area :body %>
  <%= f.submit "Update Book" %>
<% end %>


<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path %>

