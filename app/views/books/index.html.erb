<h1>Books#index</h1>

<% if @book.errors.any? %>
  <div>
    <h2>
      <%= @book.errors.count %> errors prohibited this obj from being saved:
    </h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= render 'list', book: @book %>

<h1>以下、右画面（Book一覧）</h1>

<h2>Books</h2>
<thead>
  <th>Title</th>
  <th>Opinion</th>
  <th colspan=3></th>
</thead>

<tbody>
<% @books.each do |book| %>
<tr>
  <%= link_to user_path(book.user.id) do %>
    <td><%= image_tag book.user.get_profile_image(80,80) %></td>
  <% end %>
  <%= link_to book_path(book.id) do %>
    <td><%= book.title %></td>
  <% end %>
  <td><%= book.body %></td>
</tr>
<% end %>

</tbody>
